<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_project_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/project_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_project_image"
            android:textSize="@dimen/card_primary_text"
            android:text="Title"
            android:paddingTop="@dimen/card_primary_text_padding_top"
            android:paddingBottom="@dimen/card_primary_text_padding_bottom"
            android:paddingStart="@dimen/card_primary_text_padding_side"
            android:paddingEnd="@dimen/card_primary_text_padding_side"/>

        <TextView
            android:id="@+id/project_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_item_title"
            android:textSize="@dimen/card_subtext"
            android:text="Subtitle"
            android:paddingStart="@dimen/card_subtext_padding_side"
            android:paddingEnd="@dimen/card_subtext_padding_side"
            android:paddingBottom="@dimen/card_subtext_padding_bottom"/>

        <LinearLayout
            android:id="@+id/project_item_buttons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project_item_subtitle">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/card_action_padding"
                android:textColor="@color/colorAccent"
                android:text="Action"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/card_action_padding"
                android:textColor="@color/colorAccent"
                android:text="Action"/>

        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>